    "def clean_dataframe(df):\n",
    "    na_values= ['#','**','*','##','',' ']\n",
    "    for col in df.columns:\n",
    "        df[col] = df[col].astype(str).replace(na_values,pandas.NA)\n",
    "    return df\n",
    "\n",
    "def combine(folder_path = \"/Users/annawtong/Desktop/projectdata\"):\n",
    "    all_data= []\n",
    "\n",
    "    files = glob.glob(os.path.join(\"/Users/annawtong/Desktop/projectdata\",\"*\"))\n",
    "\n",
    "    for file in files:\n",
    "        df= pandas.read_excel(file,na_values=['#', '**', '*', '##'])\n",
    "\n",
    "        df=clean_dataframe(df)\n",
    "\n",
    "        all_data.append(df)\n",
    "\n",
    "    if all_data:\n",
    "        combined_df = pandas.concat(all_data, ignore_index=True)\n",
    "        print(f\"Successfully combined {len(all_data)} files\")\n",
    "        print(f\"Final dataset shape: {combined_df.shape}\")\n",
    "        return combined_df\n",
    "    else:\n",
    "        print(\"No data found!\")\n",
    "        return None\n",
    "\n",
    "folder_path = \"/Users/annawtong/Desktop/projectdata\"\n",
    "combined_data = combine(\"/Users/annawtong/Desktop/projectdata\")\n",
    "\n",
    "if combined_data is not None:\n",
    "    # --- START of change ---\n",
    "    output_csv_path = os.path.join(folder_path, \"combined_employment_data.csv\")\n",
    "    output_excel_path = os.path.join(folder_path, \"combined_employment_data.xlsx\")\n",
    "\n",
    "    combined_data.to_csv(output_csv_path, index=False)\n",
    "    combined_data.to_excel(output_excel_path, index=False)\n",
    "    print(f\"Combined data saved to '{output_csv_path}'\")\n",
    "    # --- END of change ---"
   ]
